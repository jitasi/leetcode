// Runtime: 12 ms, faster than 90.68% of C++ online submissions for Non-overlapping Intervals.
Memory Usage: 11.9 MB, less than 7.17% of C++ online submissions for Non-overlapping Intervals.

class Solution {
public:
  int eraseOverlapIntervals(vector<vector<int>>& intervals) {
    const int len = intervals.size();
    sort(intervals.begin(), intervals.end());
    
    int ans = 0;
    int last = 0;
    for (int i = 1; i < len; i++) {
      if (intervals[i][0] < intervals[last][1]) {
        ans++;
        if (intervals[i][1] < intervals[last][1]) last = i;
      } else {
        last = i;
      }
    }
    return ans;
  }
};