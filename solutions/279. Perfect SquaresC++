class Solution {
public:
    int numSquares(int n) {
      vector<int> squares;
      vector<int> dp(n + 1, 0);
      for (int i = 1; i <= n; i++) {
        if (i * i > n) break;
        squares.push_back(i*i);
      }
      
      for (int i = 1; i <= n; i++) {
        int min = n + 1;
        for (int j : squares) {
          if (i == j) {
            min = 1;
            break;
          }
          if (i - j < 0) continue;
          int c = dp[i-j] + 1;
          if (min > c) min = c;
        }
        dp[i] = min;
      }
      return dp[n];
    }
};