class Solution {
public:
  bool isValid(const string& s) {
    int i = 0;
    int j = s.size() - 1;
    while (i < j) {
      if (s[i++] != s[j--]) return false;
    }
    return true;
  }
  
    bool validPalindrome(string s) {
      int i = -1;
      int j = s.size();
      while (i < j) {
        if (s[++i] == s[--j]) continue;
        return isValid(s.substr(i, j - i)) || isValid(s.substr(i + 1, j - i));
      }
      return true;
    }
};