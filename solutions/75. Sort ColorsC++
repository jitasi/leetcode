class Solution {
public:
  void sortColors(vector<int> &nums) {
    int p = 0, q = 0, r = nums.size() - 1;

    while (q <= r) {
      if (nums[q] == 0) {
        std::swap(nums[p], nums[q]);
        p++;
        q++;
      } else if (nums[q] == 2) {
        std::swap(nums[r], nums[q]);
        r--;
      } else {
        q++;
      }
    }
  }
};