// Forward declaration of isBadVersion API.
bool isBadVersion(int version);

class Solution {
public:
  int firstBadVersion(int n) {
    long start = 1;
    long mid;
    int last_bad = 1;
    while (start <= n) {
      mid = (start + n) / 2;
      if (isBadVersion(mid)) {
        last_bad = mid;
        n = mid - 1;
      } else {
        start = mid + 1;
      }
    }
    return last_bad;
  }
};