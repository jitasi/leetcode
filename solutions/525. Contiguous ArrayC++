// Runtime: 124 ms, faster than 83.75% of C++ online submissions for Contiguous Array.
// Memory Usage: 19.8 MB, less than 74.82% of C++ online submissions for Contiguous Array.


class Solution {
public:
  int findMaxLength(vector<int>& nums) {
    if (nums.empty()) return 0;
    int ans = 0;
    int sum = 0;
    unordered_map<int, int> m;
    for (int i = 0; i < nums.size(); i++) {
      sum += (nums[i] == 1)? 1 : -1;
      if (sum == 0) ans = i + 1;
      else if (m.count(sum) == 0) m[sum] = i;
      else ans = max(ans, i - m[sum]);
    }
    return ans;
  }
};