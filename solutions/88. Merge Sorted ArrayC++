class Solution {
public:
  void merge(vector<int>& nums1, int m, vector<int>& nums2, int n) {
    if (n == 0) return;
    
    int p = m - 1;
    int q = n - 1;
    int i = m + n - 1;
    for (; i >= 0 && p >= 0 && q >= 0; i--) {
      if (nums1[p] < nums2[q]) {
        nums1[i] = nums2[q];
        q--;
      } else {
        nums1[i] = nums1[p];
        p--;        
      }
    }
    
    for (; q >= 0; q--)
      nums1[i--] = nums2[q];
  }
};