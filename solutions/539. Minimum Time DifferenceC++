// Runtime: 16 ms, faster than 90.90% of C++ online submissions for Minimum Time Difference.
// Memory Usage: 11.7 MB, less than 74.23% of C++ online submissions for Minimum Time Difference.
​
class Solution {
public:
  int findMinDifference(vector<string>& timePoints) {
    const int len = timePoints.size();
    vector<int> ts(len << 1);
    int pos = 0;
    for (const string& tp: timePoints) {
      const int t = atoi(tp.substr(0, 2).c_str()) * 60 + atoi(tp.substr(3, 2).c_str());
      ts[pos++] = t;
      ts[pos++] = t + 24 * 60;
    }
    
    nth_element(ts.begin(), ts.begin() + len + 1, ts.end());
    sort(ts.begin(), ts.begin() + len + 1);
    int ans = INT_MAX;
    for (int i = 0; i < len; i++)
      ans = min(ans, ts[i + 1] - ts[i]);
    return ans;
  }
};
