class Solution {
public:
  bool mapping(string s, string t) {
    map<char, char> m;
    for (int i = 0; i < s.length(); i++) {
      if (m.find(s[i]) != m.end()) {
        if (m[s[i]] != t[i])
          return false;
      } else {
        m[s[i]] = t[i];
      }
    }
    return true;
  }

  bool isIsomorphic(string s, string t) {
    if (s.length() <= 1)
      return true;
    return mapping(s, t) && mapping(t, s);
  }
};