// Runtime: 16 ms, faster than 20.81% of C++ online submissions for Delete and Earn.
// Memory Usage: 11.2 MB, less than 27.62% of C++ online submissions for Delete and Earn.
​
class Solution {
public:
  int deleteAndEarn(vector<int>& nums) {
    vector<int> dp(10001, 0);
    for (const int n: nums)
      dp[n] += n;
    
    dp[1] = max(dp[0], dp[1]);
    for (int i = 2; i < 10001; i++) {
      dp[i] = max(dp[i - 2] + dp[i], dp[i - 1]);
    }
    return dp[10000];
  }
};
