// Runtime: 148 ms, faster than 39.81% of C++ online submissions for Best Time to Buy and Sell Stock with Transaction Fee.
// Memory Usage: 15.2 MB, less than 61.93% of C++ online submissions for Best Time to Buy and Sell Stock with Transaction Fee.

class Solution {
public:
  int maxProfit(vector<int>& prices, int fee) {
    if (prices.size() <= 1) return 0;
    
    int sold = 0;
    int hold = -prices[0];
    int t;
    for (const int p: prices) {
      t = sold;
      sold = std::max(sold, hold + p - fee);
      hold = std::max(hold, sold - p);
    }
    return sold;
  }
};