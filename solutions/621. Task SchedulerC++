class Solution {
public:
  int leastInterval(vector<char> &tasks, int n) {
    vector<int> t(26, 0);
    for (char c : tasks) {
      t[c - 'A']++;
    }

    int total = 0;
    int m = 0;
    for (int i = 0; i < t.size(); i++) {
      if (m < t[i])
        m = t[i];
      total += t[i];
    }

    int c = 0;
    for (int i = 0; i < t.size(); i++) {
      if (m == t[i])
        c++;
    }

    int ret = (m - 1) * (n + 1) + c;
    return ret > total ? ret : total;
  }
};