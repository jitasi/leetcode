// Runtime: 0 ms, faster than 100.00% of C++ online submissions for 2 Keys Keyboard.
// Memory Usage: 8.2 MB, less than 84.78% of C++ online submissions for 2 Keys Keyboard.


class Solution {
public:
    // 1 => 1
    // 2 => 2 c p
    // 3 => 3 c p p
    // 4 => 4 c p c p
    //   => 5 c p p p p
    // 5 => 6 c p c p p
    // 6 => 8 c p c p c p
    int minSteps(int n) {
       if (n == 1) return 0;
        int res = n;
        for (int i = n - 1; i > 1; --i) {
            if (n % i == 0) {
                res = min(res, minSteps(n / i) + i);
            }
        }
        return res;        
    }
};