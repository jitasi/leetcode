// Runtime: 64 ms, faster than 68.71% of C++ online submissions for Populating Next Right Pointers in Each Node.
// Memory Usage: 27.5 MB, less than 5.89% of C++ online submissions for Populating Next Right Pointers in Each Node.

/*
// Definition for a Node.
class Node {
public:
    int val;
    Node* left;
    Node* right;
    Node* next;

    Node() {}

    Node(int _val, Node* _left, Node* _right, Node* _next) {
        val = _val;
        left = _left;
        right = _right;
        next = _next;
    }
};
*/
class Solution {
public:
  Node* connect(Node* root) {
    if (root == nullptr) return root;
    
    queue<Node*> cur;
    queue<Node*> next;
    cur.push(root);
    while (!cur.empty()) {
      Node* prev = nullptr;
      while (!cur.empty()) {
        if (prev == nullptr) {
          prev = cur.front();
        } else {
          prev->next = cur.front();
          prev = prev->next;
        }
        cur.pop();
        
        if (prev->left != nullptr) next.push(prev->left);
        if (prev->right != nullptr) next.push(prev->right);
      }
      prev->next = nullptr;
      cur.swap(next);
    }
    
    return root;
  }
};