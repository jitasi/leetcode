class Solution {
public:
    bool work(vector<vector<char>>& board, int i, int j, string word, int k) {
      if (word.size() <= k) return true;
      if (i < 0 || j < 0 || i >= board.size() || j >= board[0].size()) return false;
      if (board[i][j] != word[k]) return false;
      
      char tmp = board[i][j];
      board[i][j] = ' ';
      bool ret = work(board, i, j + 1, word, k+1) || work(board, i, j - 1, word, k+1) ||
        work(board, i + 1, j, word, k+1) || work(board, i - 1, j, word, k+1);
      board[i][j] = tmp;
      return ret;
    }
  
    bool exist(vector<vector<char>>& board, string word) {
      for (int i = 0; i < board.size(); i++) {
        for (int j = 0; j < board[0].size(); j++) {
          if (work(board, i, j, word, 0)) return true;
        }
      }
      return false;
    }
};