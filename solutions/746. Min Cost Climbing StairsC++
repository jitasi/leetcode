class Solution {
public:
    int minCostClimbingStairs(vector<int>& cost) {
      if (cost.size() <= 1) return 0; 
      int p = cost[0];
      int q = cost[1];
      for (int i = 2; i < cost.size(); i++) {
        int n = (p > q? q : p) + cost[i];
        p = q;
        q = n;
      }
      return p > q? q : p;
    }
};