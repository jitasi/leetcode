class Solution {
public:
  int maxProfit(vector<int>& prices) {
    if (prices.size() <= 1) return 0;
    int lowest = prices[0];
    int profit = 0;
    for (int i = 1; i < prices.size(); i++) {
      if (lowest > prices[i]) {
        lowest = prices[i];
        continue;
      }
      const int diff = prices[i] - lowest;
      if (diff > profit) profit = diff;
    }
    return profit;
  }
};