// Runtime: 196 ms, faster than 35.79% of C++ online submissions for Fruit Into Baskets.
// Memory Usage: 22.3 MB, less than 23.31% of C++ online submissions for Fruit Into Baskets.

// length of longest subarray with up to 2 different values.

class Solution {
public:
  int totalFruit(vector<int>& tree) {
    unordered_map<int, int> m;  // type -> number in the window
    int ans = 0;
    int type_of_trees = 0;  // type of trees in the window
    int start = 0;
    for (int i = 0; i < tree.size(); i++) {
      if (m.count(tree[i]) > 0 && m[tree[i]] > 0) {
        m[tree[i]]++;
      } else {
        type_of_trees++;
         m[tree[i]] = 1;
      }
      
      while (type_of_trees > 2) {
        if (--m[tree[start++]] == 0)
          type_of_trees--;
      }
      
      ans = std::max(ans, i - start + 1);    
    }
    return ans;
  }
};