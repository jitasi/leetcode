class Solution {
public:
  int maxChunksToSorted(vector<int> &arr) {
    int chucks = 0;

    int last = 0;
    for (int p = 0; p < arr.size(); p++) {
      for (int q = 0; q < arr.size(); q++) {
        if (arr[q] == p) {
          if (q > last)
            last = q;
          break;
        }
      }
      if (p == last)
        chucks++;
    }

    return chucks;
  }
};