
class Solution {
public:
  int bestRotation(vector<int>& A) {
    const int len = A.size();
    
    vector<int> change(len, 0);
    for (int i = 0; i < len; i++)
      change[(i + len + 1 - A[i]) % len]--;
    
    int ans = 0;
    for (int i = 1; i < len; i++) {
      change[i] += change[i - 1] + 1;
      ans = change[i] > change[ans]? i : ans;
    }
    return ans;
  }
};