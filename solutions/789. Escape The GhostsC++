class Solution {
public:
  bool escapeGhosts(vector<vector<int>> &ghosts, vector<int> &target) {
    const int dist = abs(target[0]) + abs(target[1]);

    for (int i = 0; i < ghosts.size(); i++) {
      const int ghost_dist =
          abs(target[0] - ghosts[i][0]) + abs(target[1] - ghosts[i][1]);
      if (ghost_dist <= dist)
        return false;
    }
    return true;
  }
};