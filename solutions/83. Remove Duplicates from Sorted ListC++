/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
  ListNode *deleteDuplicates(ListNode *head) {
    if (head == NULL)
      return NULL;

    ListNode *old = head;
    for (ListNode *p = head->next; p != NULL; p = p->next) {
      if (p->val == old->val)
        continue;
      old->next = p;
      old = p;
    }
    old->next = NULL;
    return head;
  }
};