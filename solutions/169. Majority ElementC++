class Solution {
public:
    int majorityElement(vector<int>& nums) {
      if (nums.size() <= 2) return nums[0];
      sort(nums.begin(), nums.end());
      int mid = nums.size() / 2;
      if (nums[mid] == nums[mid-1])
        return nums[mid];
      else
        return nums[mid+1];
    }
};

// 0 1 2 3 4
// mid = 2

// 0 1 2 3 4 5
// mid = 3