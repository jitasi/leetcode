//   ... 1 2 3 4 5
//       p q r
// 1 or 2 + 4
// 2 or 3 + 5

class Solution {
public:
  int rob(vector<int>& nums) {
    if (nums.size() == 0) return 0;
    if (nums.size() == 1) return nums[0];
    
    int p = nums[0];
    int q = nums[1];
    if (nums.size() == 2) return p > q? p : q;
    
    int r = nums[0] + nums[2];    
    for (int i = 3; i < nums.size(); i++) {
      int x = (p > q? p : q) + nums[i];
      p = q;
      q = r;
      r = x;
    }
    
    return (q > r)? q : r;
  }
};