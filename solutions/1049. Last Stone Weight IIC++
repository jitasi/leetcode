// Runtime: 0 ms, faster than 100.00% of C++ online submissions for Last Stone Weight II.
// Memory Usage: 8.4 MB, less than 100.00% of C++ online submissions for Last Stone Weight II.
​
class Solution {
public:
  int lastStoneWeightII(vector<int>& stones) {
    const int sum = std::accumulate(stones.begin(), stones.end(), 0);
    
    vector<bool> f(sum + 1, false);
    f[0] = true;
    for(int i = 0; i < stones.size(); i++) {
      for (int j = sum / 2; j >= stones[i]; j--) 
        f[j] = f[j] || f[j - stones[i]];
    }
    
    for (int i = sum / 2; i >= 0; i--)
      if (f[i]) return sum - i - i;
    return sum;
  }
};
