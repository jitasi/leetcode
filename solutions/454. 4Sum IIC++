class Solution {
public:
    int fourSumCount(vector<int>& A, vector<int>& B, vector<int>& C, vector<int>& D) {
      unordered_map<int, int> m;
      for (int a: A) {
        for (int b: B) {
          const int s = a + b;
          if (m.find(s) != m.end()) {
            m[s]++;
          } else {
            m[s] = 1;
          }
        }
      }
      
      int cnt = 0;
      for (int c: C) {
        for (int d: D) { 
          const int s = - c - d;
          if (m.find(s) != m.end()) cnt += m[s];
        }
      }
      
      return cnt;
    }
};