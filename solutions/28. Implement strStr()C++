class Solution {
public:
  int strStr(string haystack, string needle) {
    int len_a = haystack.length();
    int len_b = needle.length();
    if (len_a == 0 && len_b == 0)
      return 0;
    for (int i = 0; i < len_a - len_b + 1; i++) {
      int j = 0;
      for (; j < len_b; j++) {
        if (haystack.at(i + j) != needle.at(j))
          break;
      }
      if (j == len_b)
        return i;
    }
    return -1;
  }
};