// Runtime: 36 ms, faster than 41.55% of C++ online submissions for Palindrome Partitioning II.
// Memory Usage: 9.7 MB, less than 38.54% of C++ online submissions for Palindrome Partitioning II.

class Solution {
public:
  int minCut(string s) {
    const int len = s.size();
    if (len < 2) return 0;

    vector<vector<bool>> dp(len, vector<bool>(len, false));  
    for (int i = 0; i < len; i++) {
      for (int j = i; j >= 0; j--) {
        dp[j][i] = (s[j] == s[i]) && ((i - j < 2) || dp[j + 1][i - 1]) ;
      }
    }
    
    vector<int> cuts(len, len - 1);
    cuts[0] = 0;
    for (int i = 1; i < len; i++) {
      for (int j = 0; j <= i; j++) {
        if (dp[j][i]) {
          if (j == 0) {
            cuts[i] = 0;
            break;
          } else 
            cuts[i] = min(cuts[i], 1 + cuts[j - 1]);
        }      
      }
    }
    
    return cuts[len - 1];
  }
};