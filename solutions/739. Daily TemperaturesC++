class Solution {
public:
  // 73
  // 76 (76 > 73, remove 73, push 76)
  // 72 76 (72 < 76, push 72)
  // 69 72 76
  // 71 72 76 (remove 69, push 76)
  // 75 76
  // 74 75 76
  // 73 74 75 76
    
    vector<int> dailyTemperatures(vector<int>& T) {
      const int len = T.size();
      if (len == 0) return {};

      vector<int> ret(len);
      ret[len - 1] = 0;
      
      stack<int> s;  // index in T
      s.push(len - 1);
      for (int i = len - 2; i >= 0; i--) {
        while (!s.empty() && T[s.top()] <= T[i]) s.pop();
        if (s.empty()) ret[i] = 0;
        else ret[i] = s.top() - i;
        s.push(i);
      }
      return ret;
    }
};