// Runtime: 20 ms, faster than 74.78% of C++ online submissions for Guess Number Higher or Lower II.
// Memory Usage: 8.3 MB, less than 98.50% of C++ online submissions for Guess Number Higher or Lower II.


class Solution {
public:
  int getMoneyAmount(int n) {
    if (n == 1) return 0;
    else if (n == 2) return 1;
    
    // dp[i][j]: the min from i to j, both inclusive 
    int dp[n][n];

    // len = 1, 2, 3
    for (int i = 0; i < n - 2; i++) {
      dp[i][i] = 0;
      dp[i][i + 1] = i + 1;
      dp[i][i + 2] = i + 2;
    }
    dp[n - 2][n - 1] = n - 1;
    dp[n - 3][n - 2] = n - 2;
    dp[n - 2][n - 2] = 0;
    dp[n - 1][n - 1] = 0;
        
    for (int len = 4; len <= n; len++) {
      for (int i = 0; i < n - len + 1; i++) {
        const int j = i + len - 1;
        dp[i][j] = min(i + 1 + dp[i + 1][j], j + 1 + dp[i][j - 1]);
        for (int k = i + 1; k < j; k++) {
          dp[i][j] = min(dp[i][j], k + 1 + max(dp[k + 1][j], dp[i][k - 1]));
        }
      }
    }
    
    return dp[0][n - 1];
  }
};