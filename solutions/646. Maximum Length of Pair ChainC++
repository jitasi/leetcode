class Solution {
public:
  int findLongestChain(vector<vector<int>> &pairs) {
    sort(pairs.begin(), pairs.end(),
         [](const vector<int> &a, const vector<int> &b) -> bool {
           return a[1] < b[1];
         });

    int cur = numeric_limits<int>::min();
    int ret = 0;
    for (const auto &pair : pairs) {
      if (cur < pair[0]) {
        cur = pair[1];
        ret++;
      }
    }

    return ret;
  }
};