class Solution {
public:
    int search(vector<int>& nums, int target) {
      int s = 0;
      int e = nums.size() - 1;

      while (s <= e) {
        const int mid = (s + e) / 2;
        if (nums[mid] == target) return mid;
        
        if (nums[s] <= nums[mid]) {
          if (target >= nums[s] && target <= nums[mid]) {
            e = mid - 1;
            continue;
          }
          s = mid + 1;
          continue;
        }
        
        if (target >= nums[mid] && target <= nums[e]) {
          s = mid + 1;
          continue;
        }
        e = mid - 1;
      }
      return -1;
    }

};