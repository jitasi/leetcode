class Solution {
public:
    int minimumTotal(vector<vector<int>>& triangle) {
      if (triangle.empty()) return 0;
      
      const int len = triangle.size();
      int dp[len];
      dp[0] = triangle[0][0];
      for (int i = 1; i < len; i++) {
        dp[i] = dp[i - 1] + triangle[i][i];
        for (int j = i - 1; j > 0; j--) {
          dp[j] = triangle[i][j] + std::min(dp[j], dp[j - 1]);
        }
        dp[0] += triangle[i][0];
      }
      
      int ans = dp[0];
      for (int i = 1; i < len; i++) {
        if (ans > dp[i]) ans = dp[i];
      }
      
      return ans;
    }
};