class Solution {
public:
  int mySqrt(int x) {
    if (x == 0 || x == 1)  
       return x; 
  
    int start = 0, end = x, ans;    
    while (start <= end)  
    {         
        int mid = (start + end) / 2; 
  
        if (x / mid == mid && x % mid == 0) 
            return mid; 
  
        if (x / mid < mid) { 
            end = mid-1;    
          
        } else {
            start = mid + 1; 
            ans = mid; 
        }
    } 
    return ans; 
  }
};