// Runtime: 104 ms, faster than 29.82% of C++ online submissions for Combinations.
// Memory Usage: 20.3 MB, less than 27.17% of C++ online submissions for Combinations.
​
class Solution {
public:
  void combine(int n, int k, vector<int>& prefix, vector<vector<int>>& ans) {
    if (k == 0) ans.push_back(prefix);
    if (k == 0 || n == 0) return;
    
    prefix.push_back(n);
    combine(n - 1, k - 1, prefix, ans);
    prefix.pop_back();
    combine(n - 1, k, prefix, ans);
  }
  
  vector<vector<int>> combine(int n, int k) {
    vector<vector<int>> ans;
    vector<int> prefix;
    combine(n, k, prefix, ans);
    return ans;
  }
};
