class Solution {
public:
  vector<int> grayCode(int n) {
    if (n <= 0)
      return {0};

    // n == 1
    vector<int> ret = {0, 1};

    int addon = 1;
    for (int i = 2; i <= n; i++) {
      addon *= 2;
      const int nums = ret.size();
      for (int j = nums - 1; j >= 0; j--) {
        ret.push_back(addon + ret[j]);
      }
    }

    return ret;
  }
};