class Solution {
public:
  vector<int> twoSum(vector<int> &numbers, int target) {
    int p = 0;
    int q = numbers.size() - 1;
    while (numbers[p] + numbers[q] != target) {
      if (numbers[p] + numbers[q] > target) {
        q--;
      } else if (numbers[p] + numbers[q] < target) {
        p++;
      }
    }
    return {p + 1, q + 1};
  }
};