​
​
/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:  
  ListNode* partition(ListNode* head, int x) {
    ListNode small(0);
    ListNode bigger(0);
    
    ListNode *s = &small;
    ListNode *b = &bigger;
    while (head != nullptr) {
      if (head->val < x) {
        s->next = head;
        s = s->next;
      } else {
        b->next = head;
        b = b->next;
      }
      head = head->next;
    }
    s->next = b->next = nullptr;
    
    if (bigger.next != nullptr) {
      s->next = bigger.next;
    }   
    return small.next;
  }
};
