class Solution {
public:
    int romanToInt(string s) {
      int val = 0;
      char prev = ' ';
      for (int i = s.size() - 1; i >= 0; i--) {
        int t;
        if (s[i] == 'I') {
          if (prev == 'V' || prev == 'X')
            t = -1;
          else 
            t = 1;
        } else if (s[i] == 'V') t = 5;
        else if (s[i] == 'X') {
          if (prev == 'L' || prev == 'C')
            t = -10;
          else
            t = 10;
        } else if (s[i] == 'L') t = 50;
        else if (s[i] == 'C') {
          if (prev == 'D' || prev == 'M')
            t = -100;
          else
            t = 100;
        } else if (s[i] == 'D') t = 500;
        else if (s[i] == 'M') t = 1000;
        prev = s[i];
        val += t;
      }
      return val;
    }
};